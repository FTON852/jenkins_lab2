pipeline {
    agent any

    stages {
        stage('Build in Docker') {
            agent {
                docker {
                    image 'mcr.microsoft.com/dotnet/sdk:6.0'
                    args '-v $PWD:/app'
                }
            }
            steps {
                dir('/app') {
                    sh 'dotnet build -c Release'
                }
            }
        }
    }
    post {
        success {
            archiveArtifacts artifacts: 'bin/Release/*/', fingerprint: true
        }
    }
}
