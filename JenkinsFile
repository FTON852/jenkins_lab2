pipeline {
    agent any

    stages {
        stage('Build Docker Image') {
            steps {
                script {
                    docker.build('python:latest', '-f Dockerfile .')
                }
            }
        }
        stage('Run Python Script') {
            steps {
                script {
                    docker.image('my-python-app:latest').inside {
                        sh 'https://github.com/FTON852/jenkins_lab2'
                        sh 'sudo pip install pyinstaller'
                        sh 'sudo pyinstaller --onefile main.py'
                    }
                }
            }
        }
    }
    post {
        success {
            archiveArtifacts artifacts: 'dist/main.exe', fingerprint: true
        }
    }
}
